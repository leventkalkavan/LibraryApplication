@model WebMVC.Models.ViewModels.AddBookViewModel
@{
    ViewData["Title"] = "Kitap Ekle";
}
<h2>Kitap Ekle</h2>

<form asp-action="AddBook" method="post">
    <div class="form-group">
        <label asp-for="BookName">Kitap Adı</label>
        <input asp-for="BookName" class="form-control" />
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorName">Yazar Adı</label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookPhotoUrl">Kitap Görsel URL'i</label>
        <input asp-for="BookPhotoUrl" class="form-control" />
        <span asp-validation-for="BookPhotoUrl" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>